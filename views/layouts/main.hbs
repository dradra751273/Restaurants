<!--Delete check modal-->
<dialog class="delete-modal">
  <h3>OK to delete restaurantï¼Ÿ</h3>
  <div class="modal-buttons">
    <a href="/restaurants/delete" class="btn btn-danger delete-btn">ok</a>
    <button class="btn btn-success close-modal-btn">close</button>
  </div>
</dialog>

<script>
  const modal = document.querySelector('.delete-modal')
  const openModals = document.querySelectorAll('.open-modal-btn')
  const closeModal = document.querySelector('.close-modal-btn')

  openModals.forEach(btn => {
    btn.addEventListener('click', () => {
      modal.showModal()
    })
  })
  closeModal.addEventListener('click', () => {
    modal.close()
  })
</script>


